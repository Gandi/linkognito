{

  "manifest_version": 3,
  "name": "Linkognito",
  "version": "1.6",

  "description": "Open links in incognito mode",

  "icons": {
    "48": "img/icon.png",
    "96": "img/icon@2x.png",
    "128": "img/icon-128px.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "linkognito@gandi.net"
    }
  },

  "background": {
    "service_worker": "src/background/index.js"
  },

  "permissions": [
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*",
        "file://*/*"
      ],
      "js": [
        "src/linkognito.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]

}
